<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name ,:class=>"form-control"%>
  </div>
  <div class="field">
    <%= f.label "Phone Number (Include country code)" %><br>
    <%= f.text_field :phone_number,:class=>"form-control", :placeholder => "+254 727 890 762" %>
  </div>
  <div class="field">
    <%= f.label :occupation %><br>
    <%= f.text_field :occupation,:class=>"form-control" %>
  </div>
  <div class="field">
    <%= f.label :national_id_number %><br>
    <%= f.text_field :national_id_number,:class=>"form-control" %>
  </div>
  <div class="field">
    <%= f.label :others %><br>
    <%= f.text_area :others ,:class=>"form-control" , :rows=>"3"%>
  </div>
  <br />
  <div class="actions">
     <%= f.submit "Submit", :class=>"btn btn-primary" %>
  </div>
<% end %>
