<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Settings
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">settings</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
          <div class="box">
                  <div class="box-header">
                      <h3 class="box-title">Chamas Configurations </h3>
                  </div><!-- /.box-header -->
                  <%= will_paginate @settings %>
                  <div class="box-body no-padding">
                      <table class="table table-striped">
                          <tr>
                            <th>#</th>
                            <th>Remittance deadline</th>
                            <th>Warning days before deadline</th>
                            <th>Remittance reminder sms</th>
                            <th>Penalty reminder sms</th>
                            <th>Penalty type</th>
                            <th>Penalty amount</th>
                            <th>Penalty repay periods in days</th>
                            <th>Chama</th>
                            <th colspan="3"></th>
                          </tr>
                                                
                        <% @settings.each do |setting| %>
                        <tr>
                          <td><%= link_to setting.id, setting %></td>
                          <td><%= setting.remittance_deadline %></td>
                          <td><%= setting.warning_days_before_deadline %></td>
                          <td><%= setting.remittance_reminder_sms %></td>
                          <td><%= setting.penalty_reminder_sms %></td>
                          <td><%= setting.penalty_type %></td>
                          <td><%= setting.penalty_amount %></td>
                          <td><%= setting.penalty_repay_periods_in_days %></td>
                          <td><%= setting.chama.name %></td>
                          
                          <td><%= link_to 'Edit', edit_setting_path(setting) %>
                              <%= link_to 'Delete', setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                      <% end %>
                          
                      </table>

                      <%= link_to "Configure Chama", new_setting_path, :class => 'btn btn-primary' %>
                  </div><!-- /.box-body -->
              </div><!-- /.box -->
        </div>
    </div>
</section>
