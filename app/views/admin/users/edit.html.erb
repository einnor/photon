<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        My Profile
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Users</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
<div class="row">
	<% if @user.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this word from being saved:</h2>

	      <ul>
	      <% @user.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
    <div class="col-md-4 col-md-offset-1">
      <div class="box">
            <div class="box-header">
                <h3 class="box-title">Edit My Profile</h3>
            </div><!-- /.box-header -->
	        <div class="box-body">
	            <%= form_for [:admin, @user], :html => {:multipart => true} do |f| %>
					
					 <div class="control-group" style="display: inline;">
					   <%= f.label :name, t("activerecord.attributes.user.email", :default => "Name"), :class => 'control-label' %>
					  <div class="input">
					    <%= f.text_field :name, :class => 'text_field' %>
					  </div>
					</div>

					<div class="control-group">
					   <%= f.label :username, t("activerecord.attributes.user.email", :default => "Username"), :class => 'control-label' %>
					  <div class="input">
					    <%= f.text_field :username, :class => 'text_field' %>
					  </div>
					</div>

					<div class="control-group">
					   <%= f.label :email, t("activerecord.attributes.user.email", :default => "Email"), :class => 'control-label' %>
					  <div class="input">
					    <%= f.text_field :email, :class => 'text_field' %>
					  </div>
					</div>

					<div class="control-group">
					   <%= f.label :password, t("activerecord.attributes.user.password", :default => "Password"), :class => 'control-label' %>
					  <div class="input">
					    <%= f.password_field :password, :class => 'password_field' %>
					  </div>
					</div>
					<div class="control-group">
					   <%= f.label :Password, t("activerecord.attributes.user.password_confirmation", :default => "Retype Password"), :class => 'control-label' %>
					  <div class="input">
					    <%= f.password_field :password_confirmation, :class => 'password_field' %>
					  </div>
					</div>


				

	        </div><!-- /.box-body -->
          </div><!-- /.box -->
    </div>

    <div class="col-md-4">
      <div class="box">
            <div class="box-header">
                <h3 class="box-title">.</h3>
            </div><!-- /.box-header -->
	        <div class="box-body">
	            

					<br />

					<div>
					  <%= f.submit "Submit",:class=>"btn bg-sc-blue btn-block" %>
					</div>

				  <% end -%>

	        </div><!-- /.box-body -->
          </div><!-- /.box -->
    </div>
    

</div>
</section>
