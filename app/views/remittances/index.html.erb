<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
          <div class="box">
                  <div class="box-header">
                      <h3 class="box-title">All Remittances </h3>
                  </div><!-- /.box-header -->
                  <%= will_paginate @remittances %>
                  <div class="box-body no-padding">
                      <table class="table table-striped">
                          <tr>
                              <th >#</th>
                              <th>Amount</th>
                              <th>Remittance type</th>
                              <th>Who Paid</th>
                              <th>Date Paid</th>
                              <th>Actions</th>
                          </tr>
                          <% @remittances.each do |remittance| -%>
                          <tr>
                              <td>
                                  <%= remittance.id %>
                              </td>
                              <td>
                                  <%= link_to remittance.amount, '#' %>
                              </td>
                              <td>
                                 <%= remittance.remittance_type %>
                              </td>
                              <td>
                                 <%= remittance.member.name %>
                              </td>
                              <td>
                                  <%= remittance.created_at.to_formatted_s(:long_ordinal) %>
                              </td>
                                                          
                              <td>
                                <%= link_to "Edit", edit_remittance_path(remittance) %>
                                <%= link_to "Delete", remittance_path(remittance), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
                              </td>
                          </tr>
                           <% end -%>
                          
                      </table>


                      <%= link_to "Add A New remittance", new_remittance_path, :class => 'btn btn-primary' %>
                  </div><!-- /.box-body -->
              </div><!-- /.box -->
        </div>
    </div>
</section>
