<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Penalty Repayment
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">penalty_repayment</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
          <div class="box">
                  <div class="box-header">
                      <h3 class="box-title">All Penalty Repayments </h3>
                  </div><!-- /.box-header -->
                  <%= will_paginate @penalty_repayments %>
                  <div class="box-body no-padding">
                      <table class="table table-striped">
                          <tr>
                              <th >#</th>
                              <th>Amount</th>
                              <th>penalty Holder</th>
                              <th>Date Paid</th>
                              <th>Penalty Status</th>
                              <th>Actions</th>
                          </tr>
                          <% @penalty_repayments.each do |penalty_repayment| -%>
                          <tr>
                              <td>
                                  <%= penalty_repayment.id %>
                              </td>
                              <td>
                                  <%= link_to penalty_repayment.amount, '#' %>
                              </td>
                              <td>
                                 <%= penalty_repayment.penalty.member.name %>
                              </td>
                                                           
                              <td>
                                  <%= penalty_repayment.created_at.to_formatted_s(:long_ordinal) %>
                              </td>
                              <td>
                                 <%= penalty_repayment.penalty.penalty_status %>
                              </td>                          
                              <td>
                                <%= link_to "Edit", edit_penalty_repayment_path(penalty_repayment) %>
                                <%= link_to "Delete", penalty_repayment_path(penalty_repayment), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
                              </td>
                          </tr>
                           <% end -%>
                          
                      </table>

                      <%= link_to 'Pay A Penalty', new_penalty_repayment_path , :class => 'btn btn-primary'%>
                  </div><!-- /.box-body -->
              </div><!-- /.box -->
        </div>
    </div>
</section>
