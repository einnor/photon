<br />
    <!-- Main row -->
<div class="row">
    <!-- Left col -->
    <section class="col-lg-12"> 
        <h1>
            Posts
        </h1>
        <br />

        <ul class="list-group">
            
          <% @posts.each do |post| %>

              <li class="list-group-item">
                <div class="row">
                	 <div class="pull-letf">
                	 	<div class="pull-left">                           
	                        <%= image_tag("avatar3.png",:width =>"30", :height=>"30", :class=>"img-circle")%>
	                    </div>
	                    <h4>
	                        <%= post.user.username %>
	                        
	                    </h4>
                	 </div>
                	 <div class="pull-right">
                	 	<small><i class="fa fa-clock-o"></i> <%= time_ago_in_words(post.created_at) %> ago</small>
                	 </div>

                	 <div class="col-md-10">
					  <%= image_tag(post.photon)%>
					</div>

                </div>

              </li>          

        <% end %>
   
      </ul>

    </section><!-- /.Left col -->

</div><!-- /.row (main row) -->

