<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Members
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Members</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
          <div class="box">
                  <div class="box-header">
                      <h3 class="box-title">All Members </h3>
                  </div><!-- /.box-header -->
                  <%= will_paginate @members %>
                  <div class="box-body no-padding">
                      <table class="table table-striped">
                          <tr>
                              <th >#</th>
                              <th>Name</th>
                              <th>Phone Number</th>
                              <th>Occupation</th>
                              <th>National ID Number</th>
                              <th>Chama</th>
                              <th>Others</th>
                              <th>Actions</th>
                          </tr>
                          <% @members.each do |member| -%>
                          <tr>
                              <td>
                                  <%= member.id %>
                              </td>
                              <td>
                                  <%= link_to member.name, member_path(member) %>
                              </td>
                              <td>
                                 <%= member.phone_number %>
                              </td>
                              <td>
                                 <%= member.occupation %>
                              </td>
                              <td>
                                  <%= member.national_id_number %>
                              </td>

                              <td>
                                  <%= member.chama.name %>
                              </td>
                              <td>
                                  <%= member.others %>
                              </td>

                                                          
                              <td>
                                <%= link_to "Edit", edit_member_path(member) %>
                                <%= link_to "Delete", member_path(member), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
                              </td>
                          </tr>
                           <% end -%>
                          
                      </table>


                      <%= link_to "Add A New member", new_member_path, :class => 'btn btn-primary' %>
                  </div><!-- /.box-body -->
              </div><!-- /.box -->
        </div>
    </div>
</section>
