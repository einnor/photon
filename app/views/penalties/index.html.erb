<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
          <div class="box">
                  <div class="box-header">
                      <h3 class="box-title">All Penalties </h3>
                  </div><!-- /.box-header -->
                  <%= will_paginate @penalties %>
                  <div class="box-body no-padding">
                      <table class="table table-striped">
                           <tr>
                              <th>Penalty type</th>
                              <th>Amount</th>
                              <th>Due date</th>
                              <th>Penalty status</th>
                              <th>Penalized Member</th>
                              <th>Actions</th>
                            </tr>

                          <tbody>
                            <% @penalties.each do |penalty| %>
                              <tr>
                                <td><%= penalty.penalty_type %></td>
                                <td><%= penalty.amount %></td>
                                <td><%= penalty.due_date %></td>
                                <td><%= penalty.penalty_status %></td>
                                <td><%= link_to penalty.member.name, '#' %></td>
                               
                                <td><%= link_to 'Edit', edit_penalty_path(penalty) %>
                                <%= link_to 'Destroy', penalty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                              </tr>
                           <% end -%>
                          
                      </table>

                      <%= link_to 'Issue A Penalty', new_penalty_path , :class => 'btn btn-primary'%>
                  </div><!-- /.box-body -->
              </div><!-- /.box -->
        </div>
    </div>
</section>
