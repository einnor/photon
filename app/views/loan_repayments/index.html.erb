<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Loan Repayment
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">loan_repayment</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
          <div class="box">
                  <div class="box-header">
                      <h3 class="box-title">All Loan Repayments </h3>
                  </div><!-- /.box-header -->
                  <%= will_paginate @loan_repayments %>
                  <div class="box-body no-padding">
                      <table class="table table-striped">
                          <tr>
                              <th >#</th>
                              <th>Amount</th>
                              <th>Loan Holder</th>
                              <th>Date Paid</th>
                              <th>Loan Status</th>
                              <th>Actions</th>
                          </tr>
                          <% @loan_repayments.each do |loan_repayment| -%>
                          <tr>
                              <td>
                                  <%= loan_repayment.id %>
                              </td>
                              <td>
                                  <%= link_to loan_repayment.amount, '#' %>
                              </td>
                              <td>
                                 <%= loan_repayment.loan.member.name %>
                              </td>
                                                           
                              <td>
                                  <%= loan_repayment.created_at.to_formatted_s(:long_ordinal) %>
                              </td>
                              <td>
                                 <%= loan_repayment.loan.loan_status %>
                              </td>                          
                              <td>
                                <%= link_to "Edit", edit_loan_repayment_path(loan_repayment) %>
                                <%= link_to "Delete", loan_repayment_path(loan_repayment), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
                              </td>
                          </tr>
                           <% end -%>
                          
                      </table>

                      <%= link_to 'Add a Loan Repayment', new_loan_repayment_path , :class => 'btn btn-primary'%>
                  </div><!-- /.box-body -->
              </div><!-- /.box -->
        </div>
    </div>
</section>
