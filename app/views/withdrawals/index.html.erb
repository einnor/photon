<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Withdrawals
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">withdrawals</li>
    </ol>
</section>


<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
          <div class="box">
                  <div class="box-header">
                      <h3 class="box-title">All Withdrawals </h3>
                  </div><!-- /.box-header -->
                  <%= will_paginate @withdrawals %>
                  <div class="box-body no-padding">
                      <table class="table table-striped">
                            <tr>
                              <th>#</th>
                              <th>Amount</th>
                              <th>Description</th>
                              <th>Chama</th>
                              <th>Trasanction Date</th>
                              <th>Actions </th>
                            </tr>
                          </thead>

                          <tbody>
                            <% @withdrawals.each do |withdrawal| %>
                              <tr>
                                <td><%= withdrawal.id %></td>
                                <td><%= link_to withdrawal.amount, withdrawal %></td>
                                <td><%= withdrawal.description %></td>
                                <td><%= withdrawal.chama.name %></td>
                                <td>
                                    <%= withdrawal.created_at.to_formatted_s(:long_ordinal) %>
                                </td>

                                <td>
                                  <%= link_to 'Edit', edit_withdrawal_path(withdrawal) %>
                                  <%= link_to 'Destroy', withdrawal, method: :delete, data: { confirm: 'Are you sure?' } %>
                                </td>
                              </tr>
                           <% end -%>
                          
                      </table>


                      <%= link_to "Make A Withdrawal Transaction", new_withdrawal_path, :class => 'btn btn-primary' %>
                  </div><!-- /.box-body -->
              </div><!-- /.box -->
        </div>
    </div>
</section>
