<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Chama Admins
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Users</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
          <div class="box">
                  <div class="box-header">
                      <h3 class="box-title">All Chama Administrators</h3>
                  </div><!-- /.box-header -->
                  <div class="box-body no-padding">
                      <table class="table table-striped">
                          <tr>
                              <th >#</th>
                              <th>Name</th>
                              <th>Email</th>
                              <th>National ID Number</th>
                              <th>Phone Number</th>
                              <th>Role(1=Admin | 2=Chama Admin)</th>
                              <th>Actions</th>
                          </tr>
                          <% @users.each do |user| -%>
                          <tr>
                              <td>
                                  <%= user.id %>
                              </td>
                              <td>
                                  <%= link_to user.name, admin_user_path(user) %>
                              </td>
                              <td>
                                 <%= user.email %>
                              </td>
                              <td>
                                 <%= user.national_id_number %>
                              </td>
                              <td>
                                  <%= user.phone_number %>
                              </td>

                              
                              <td>
                                <% if user.role_ids == [2] %>
                                  <span class="badge bg-green"><%= user.role_ids %></span>
                                <% else %>
                                  <span class="badge bg-red"><%= user.role_ids %></span>
                                <% end %>
                              </td>
                            
                              <td>
                                <%= link_to "Edit", edit_admin_user_path(user) %>
                                <%= link_to "Destroy", admin_user_path(user), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
                              </td>
                          </tr>
                           <% end -%>
                          
                      </table>


                      <%= link_to "Add A New User", new_admin_user_path, :class => 'btn btn-primary' %>
                  </div><!-- /.box-body -->
              </div><!-- /.box -->
        </div>
    </div>
</section>